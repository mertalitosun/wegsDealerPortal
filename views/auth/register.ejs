<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head') %>
    <link rel="stylesheet" href="/static/css/auth.css">

<body class="register-container">
    <div class="container ">
        <div class="register-wrapper">
            <div class="register-box">
                <div class="register-header">
                    <% if (typeof message != "undefined") { %>
                        <div class="alert alert-warning">
                            <%= message %>
                        </div>
                    <% } %>
                    <h2>Hesap Oluştur</h2>
                </div>
                <form class="register-form" method="post">
                    <div class="input-group name-group">
                        <div class="input-wrapper">
                            <label for="firstName">Ad</label>
                            <input type="text" id="firstName" name="firstName" required placeholder="Adınız">
                        </div>
                        <div class="input-wrapper">
                            <label for="lastName">Soyad</label>
                            <input type="text" id="lastName" name="lastName" required placeholder="Soyadınız">
                        </div>
                    </div>
                    <div class="input-group">
                        <label for="email">E-posta Adresi</label>
                        <input type="email" id="email" name="email" required placeholder="example@wegs.com.tr">
                    </div>
                   
                    <div class="input-group password-group">
                        <label for="password">Şifre</label>
                        <input type="password" id="password" name="password" required placeholder="******">
                        <span class="toggle-password">
                            <i class="bi bi-eye" id="togglePassword"></i>
                        </span>
                    </div>
                    <button type="submit" class="register-btn">Kayıt Ol</button>
                </form>
                <div class="register-footer">
                    <span>Zaten bir hesabınız var mı? <a href="/login">Giriş Yapın</a></span>
                </div>
            </div>
        </div>
    </div>
    <script src="/static/js/auth.js"></script>
</body>
</html>