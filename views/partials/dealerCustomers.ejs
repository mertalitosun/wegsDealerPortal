<h3 class="text-center">Müşteriler</h3>
<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Şirket</th>
            <th>Sözleşme Tarihi</th>
            <th>Hizmet</th>
            <th>Paket Fiyatları</th>
            <th>Hakediş</th>
            <% if (isAdmin) { %>
                <th>Düzenle</th>
                <th>Sipariş Ekle</th>
            <% } %>
        </tr>
    </thead>
    <tbody>
        <% let totalProgressPrice = 0%>
        <%  customers.forEach(customer => { %>
            <%  totalProgressPrice += customer.price * dealers.dealerCommission%>
        <% }) %>

        <% customers.forEach(customer => { %>
            <% customer.purchases.forEach(purchase => { %>
                <tr>
                    <td>
                        <%= customer.firstName %>
                    </td>
                    <td>
                        <%= customer.lastName %>
                    </td>
                    <td>
                        <%= customer.organization %>
                    </td>
                    <td>
                        <% const createdAt = new Date(purchase.purchaseDate); %>
                        <%= createdAt.getDate().toString().padStart(2, '0') %>/<%= (createdAt.getMonth() + 1).toString().padStart(2, '0') %>/<%= createdAt.getFullYear() %>
                    </td>
                    <td>
                        <%= purchase.productName %>
                    </td>
                    <td>
                        ₺<%= purchase.price %>
                    </td>
                    <td>
                        ₺<%=  (purchase.price  * dealers.dealerCommission).toFixed(2)%>
                    </td>
                    <% if (isAdmin) { %>
                        <td>
                            <a href="/admin/customer/edit/<%= customer.id %>/<%= purchase.id %>" class="edit"><i class="bi bi-pencil-square"></i></a>
                        </td>
    
                        <td>
                            <a href="/admin/customer/addOrder/<%= customer.id %>" class="addOrder"><i class="bi bi-plus-circle-fill"></i></a>
                        </td>
                    <% } %>
                </tr>
            <% }) %>
        <% }) %>
    </tbody>
</table>